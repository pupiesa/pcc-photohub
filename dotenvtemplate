NEXTCLOUD_ocsApiUrl= # your_nextcloud.url/ocs/v2.php/apps/files_sharing/api/v1
NEXTCLOUD_PREVIEW= # your_nextcloud.url/remote.php/dav/files/ProjectPhoto

# Nextcloud server

NEXTCLOUD_SERVER_PROTOCOL=http
NEXTCLOUD_SERVER_LINK= #your_nextcloud.url
NEXTCLOUD_SERVER_PORT= #your_nextcloud.port

